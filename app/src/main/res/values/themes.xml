<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OcadoProducts" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/background_entire</item>
        <item name="colorOnPrimary">@color/primary_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_color</item>
        <item name="colorSecondaryVariant">@color/background_entire</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/background_entire</item>
    </style>

    <!--     Heading text style appearance -->
    <style name="HeadingTextAppearance" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/inter_bold_700</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="lineHeight">@dimen/margin_24</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextFieldTextLayoutStyle">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>


    <style name="TextFieldTextInputEditTextStyle">
        <item name="paddingStart">15dp</item>
        <item name="paddingEnd">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textCursorDrawable">@color/background_entire</item>
    </style>

    <style name="PlaceholderTextStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/inter_medium_500</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/margin_8</item>
        <item name="cornerSizeTopLeft">@dimen/margin_0</item>
        <item name="cornerSizeBottomRight">@dimen/margin_0</item>
        <item name="cornerSizeBottomLeft">@dimen/margin_8</item>
    </style>

    <style name="CustomShapeAppearanceOverlay" parent="">
        <item name="cornerSizeBottomLeft">@dimen/margin_24</item>
        <item name="cornerSizeBottomRight">@dimen/margin_24</item>
        <item name="cornerSizeTopLeft">@dimen/margin_24</item>
        <item name="cornerSizeTopRight">@dimen/margin_24</item>
    </style>

    <style name="UserTypeTextStyle" parent="">
        <item name="fontFamily">@font/inter_regular_400</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="lineHeight">16dp</item>
    </style>


    <style name="PrimaryAppButtonStyle">
        <item name="android:layout_marginStart">@dimen/margin_15</item>
        <item name="android:layout_marginEnd">@dimen/margin_15</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
        <item name="android:paddingStart">@dimen/margin_49</item>
        <item name="android:paddingEnd">@dimen/margin_49</item>
        <item name="android:paddingTop">@dimen/margin_18</item>
        <item name="android:paddingBottom">@dimen/margin_18</item>
        <item name="android:textColor">@color/transparent_disable_button_color</item>
        <item name="cornerRadius">@dimen/margin_15</item>
        <item name="fontFamily">@font/inter_semi_bold_600</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">14dp</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>

    </style>

</resources>


